{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4"
            ]
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make j4",
            "args": [
                "flash"
            ]
        },
        {
            "label": "flash&monitor",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4",
                "flash",
                "monitor"
            ]
        },
        {
            "label": "monitor",
            "type": "shell",
            "command": "make",
            "args": [
                "monitor"
            ]
        },
        {
            "label": "openocd",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "/root/esp32/openocd-esp32"
            },
            "command": "bin/openocd -s share/openocd/scripts -f interface/jlink.cfg -f board/esp-wroom-32.cfg",
            "problemMatcher": []
        }
    ]
}